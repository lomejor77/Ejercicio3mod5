<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondFragment">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="174dp"
        android:layout_height="177dp"
        android:layout_marginTop="32dp"
        android:contentDescription="@string/logo"
        android:src="@drawable/whatsapp__1_"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textName"
        tools:ignore="ImageContrastCheck" />

    <RadioGroup
        android:id="@+id/radGroup"
        android:layout_width="211dp"
        android:layout_height="228dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textOptions"
        tools:ignore="TextSizeCheck">

        <RadioButton
            android:id="@+id/radBtn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/facebook"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radBtn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/twitter"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radBtn3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/kfc"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radBtn4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wathsapp"
            android:textSize="20sp" />
    </RadioGroup>

    <TextView
        android:id="@+id/textOptions"
        android:layout_width="313dp"
        android:layout_height="35dp"
        android:layout_marginTop="40dp"
        android:text="@string/a_quien_pertenece_el_logo"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/imgLogo"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/imgLogo"
        app:layout_constraintTop_toBottomOf="@+id/imgLogo"
        tools:ignore="TextSizeCheck" />

    <Button
        android:id="@+id/btnAsk"
        android:layout_width="135dp"
        android:layout_height="49dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#25D366"
        android:text="@string/enviar"
        android:textColor="#616161"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/radGroup"
        app:layout_constraintStart_toStartOf="@+id/radGroup"
        app:layout_constraintTop_toBottomOf="@+id/radGroup"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textName"
        android:layout_width="299dp"
        android:layout_height="28dp"
        android:layout_marginTop="44dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>